# i3status configuration file - BEN CONFIGURATION
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
	output_format = i3bar
}

#order += "path_exists MQ Dongle"
order += "tztime local"
order += "cpu_usage"
order += "load"
order += "disk /"
order += "battery 0"
#order += "wireless wlan0"
#order += "ethernet eth0"
#order += "ipv6"
#order += "run_watch DHCP"
#order += "run_watch VPN"
#order += "volume master"

path_exists "MQ Dongle" {
        # path exists when MagicQ dongle is plugged in
        path = "/dev/usb/hiddev0"
}

wireless wlan0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "⚡ %status: %percentage"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S  "
}

load {
    #format = "[ load: %1min, %5min, %15min ]"
    format = "^ %1min"
}

disk "/" {
    #format = "%used / %total"
	format = "☉ %avail"
}

cpu_usage {
	format = "¥ %usage"
}

volume master {
       format = "♪:%volume"
       device = "default"
       mixer = "Master"
       mixer_idx = 0
}
