# wildcard proxying for any host defined as -proxy or .cs
host *-proxy
     ProxyCommand ssh -q bugs nc $(echo %h | sed 's/-proxy$//') %p
     ControlPath ~/.ssh/cm-%r@%h:%p
     ControlMaster auto
     ControlPersist 10m
     # ForwardAgent yes
     # VisualHostKey yes

host *.cs
     ProxyCommand ssh -q bugs nc $(echo %h | sed 's/.cs$//') %p
     ControlPath ~/.ssh/cm-%r@%h:%p
     ControlMaster auto
     ControlPersist 10m
     # ForwardAgent yes
     # VisualHostKey yes

